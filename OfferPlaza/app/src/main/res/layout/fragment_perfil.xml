<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PerfilFragment"
    android:background="@drawable/fondoperfil">

    <!-- TODO: Update blank fragment layout -->

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/perfil"
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:foregroundGravity="center"
        android:src="@drawable/perfil" />

    <TextView
        android:id="@+id/nom_perfil"
        android:layout_width="372dp"
        android:layout_height="105dp"
        android:layout_below="@id/perfil"
        android:layout_alignParentBottom="true"

        android:layout_marginTop="41dp"
        android:layout_marginBottom="375dp"
        android:gravity="center"
        android:text="Bryan Bautista Gonzales"
        android:textColor="@color/negro"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="164dp"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="106dp"
        android:layout_marginRight="106dp"
        android:layout_marginBottom="340dp"
        android:gravity="center"
        android:text="92928181"
        android:textColor="@color/negro"
        android:textSize="30sp"
        android:textStyle="bold" />

    <GridLayout
        android:id="@+id/idGrid"
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="410dp"
        android:layout_marginBottom="0dp"
        android:padding="4dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardFavoritos"
            android:layout_width="92dp"
            android:layout_height="108dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"

            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/favoritos" />

                <TextView
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Favoritos"
                    android:textAlignment="center"
                    android:textColor="#ffcc00"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </GridLayout>


</RelativeLayout>