<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="7dp"
        app:cardBackgroundColor="#FBF9F9"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:cardMaxElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FBFBFB"
            android:orientation="horizontal">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgProducto"
                android:layout_width="78dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/leche"
                app:civ_border_color="@color/blanco"
                app:civ_border_width="0dp" />

            <LinearLayout
                android:layout_width="276dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="2dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_margin="1dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >

                        <TextView
                            android:id="@+id/tvpNombre"
                            android:layout_width="206dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="4dp"
                            android:layout_weight="0.50"
                            android:fontFamily="@font/nunito_bold"
                            android:gravity="top"
                            android:padding="5dp"
                            android:text="TextView"
                            android:textColor="@color/negro"
                            android:textSize="20dp"
                            android:textStyle="bold" />


                        <CheckBox
                            android:id="@+id/likeIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"

                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="11dp"
                            android:layout_marginRight="11dp"
                            android:background="@drawable/ic_fav"
                            android:button="@null"
                            android:checked="false"
                            android:stateListAnimator="@animator/scale" />

                        <TextView
                            android:id="@+id/tvpSede"
                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="28dp"
                            android:fontFamily="@font/nunito_bold"
                            android:gravity="top"
                            android:padding="5dp"
                            android:text="TextView"
                            android:textColor="@color/silver"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_margin="1dp"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvStock"
                            android:layout_width="148dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="-1dp"
                            android:layout_marginLeft="-1dp"
                            android:layout_marginTop="29dp"

                            android:layout_marginRight="50dp"
                            android:fontFamily="@font/nunito_bold"
                            android:gravity="top"
                            android:padding="5dp"
                            android:text="Stock"
                            android:textColor="@color/silver"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvpAdquirir"
                            android:layout_width="101dp"
                            android:layout_height="34dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="13dp"
                            android:layout_marginRight="13dp"

                            android:layout_weight="0.50"
                            android:background="@drawable/edit_style_a"
                            android:fontFamily="@font/nunito_bold"
                            android:gravity="center"
                            android:onClick="btn_adquirir"
                            android:text="adquirir"
                            android:textColor="@color/blanco"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tvpPrecio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="-2dp"
                            android:layout_weight="0.50"
                            android:fontFamily="@font/nunito_bold"
                            android:gravity="top"
                            android:padding="5dp"
                            android:text="TextView"
                            android:textSize="20sp"

                            android:textStyle="bold" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>