<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="7dp"
        app:cardBackgroundColor="#FBF9F9"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:cardMaxElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FBFBFB"
            android:orientation="horizontal">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgTienda"
                android:layout_width="78dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/leche"
                app:civ_border_color="@color/blanco"
                app:civ_border_width="0dp"
                />

            <LinearLayout
                android:layout_width="276dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="2dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_margin="1dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >


                        <TextView
                            android:id="@+id/tvt_Nombre"
                            android:layout_width="137dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="93dp"
                            android:layout_marginRight="93dp"
                            android:layout_weight="0.50"
                            android:fontFamily="@font/nunito_bold"
                            android:gravity="top"
                            android:padding="5dp"
                            android:text="TextView"
                            android:textColor="@color/negro"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <CheckBox
                            android:id="@+id/likeIcon"
                            android:layout_width="38dp"
                            android:layout_height="41dp"

                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="53dp"
                            android:layout_marginRight="53dp"
                            android:background="@drawable/ic_favorite"
                            android:button="@null"
                            android:checked="true"
                            android:stateListAnimator="@animator/scale" />

                        <TextView
                            android:id="@+id/tvt_encorazona"
                            android:layout_width="38dp"
                            android:layout_height="41dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="18dp"
                            android:layout_marginRight="18dp"
                            android:fontFamily="@font/nunito_bold"
                            android:gravity="center"
                            android:text="10"
                            android:textColor="#F50000"
                            android:textSize="20dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_margin="1dp"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="29dp"
                            android:layout_marginLeft="29dp"
                            android:layout_marginTop="3dp"
                            android:layout_weight="0.50"
                            android:fontFamily="@font/nunito_bold"
                            android:gravity="top"
                            android:padding="5dp"
                            android:text="Productos:"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <CheckBox
                            android:id="@+id/id_producto"
                            android:layout_width="37dp"
                            android:layout_height="41dp"

                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="56dp"
                            android:layout_marginRight="56dp"
                            android:background="@drawable/producto"
                            android:button="@null"
                            android:checked="true"
                            android:stateListAnimator="@animator/scale" />

                        <TextView
                            android:id="@+id/tvt_nProducto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="23dp"
                            android:layout_marginRight="23dp"
                            android:layout_weight="0.50"
                            android:fontFamily="@font/nunito_bold"
                            android:gravity="top"

                            android:padding="5dp"
                            android:text="10"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>