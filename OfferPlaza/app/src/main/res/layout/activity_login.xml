<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="10dp"
tools:context=".activities.LoginActivity">


    <ImageView
        android:id="@+id/imageView4Logo"
        android:layout_width="91dp"
        android:layout_height="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:layout_weight="20"
        app:srcCompat="@drawable/avatar" />

    <TextView
    android:id="@+id/textWelcome"
    android:layout_width="387dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center"
    android:text="Offer Plaza"
    android:textColor="@color/negro"
    android:textSize="40dp"
    android:typeface="normal"
    android:fontFamily="@font/courgette_regular"

    />

<TextView
    android:id="@+id/textSign"
    android:layout_width="381dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center"
    android:text="Iniciar Secion"
    android:textColor="@color/gray"
    android:layout_marginBottom="50dp"
    />

    <EditText
        android:id="@+id/tv_user"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="number"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="7"
        android:background="@drawable/edt_style"
        android:drawableLeft="@drawable/ic_person"
        android:drawablePadding="10dp"
        android:elevation="5dp"
        android:ems="10"
        android:hint="DNI"
        android:maxLength="8"
        android:padding="10dp"
        android:textSize="20dp" />



<EditText
    android:id="@+id/tv_password"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:ems="10"
    android:inputType="textPassword"

    android:hint="Contrase単a"
    android:layout_weight="7"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:drawableLeft="@drawable/candado"

    android:textSize="20dp"

    android:drawablePadding="10dp"
    android:padding="10dp"
    android:background="@drawable/edt_style"
    android:layout_marginBottom="20dp"
    />

    <TextView
        android:id="@+id/forgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"

        android:text="多Olvidaste tu contrase単a?"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/btn_Login"
        android:layout_width="318dp"
        android:layout_height="16dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="6"
        android:background="@drawable/btn_style"
        android:fontFamily="@font/nunito_bold"
        android:text="Ingresar"
        android:textColor="@color/blanco" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_weight="15"
        android:gravity="center|top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textDont"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="right"
            android:text="多No tienes una cuenta?"

            />

        <TextView
            android:id="@+id/tv_registrar"
            android:layout_width="6dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"

            android:gravity="left"

            android:paddingLeft="5dp"
            android:text="Registrate"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>





</LinearLayout>