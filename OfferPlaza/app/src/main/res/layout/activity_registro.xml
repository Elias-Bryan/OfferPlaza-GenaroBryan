<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".activities.Registro">

    <TextView
        android:id="@+id/textAccount"
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_weight="1"
        android:fontFamily="@font/nunito_bold"
        android:gravity="center"
        android:text="Crear Cuenta"
        android:textColor="@color/negro"
        android:textSize="40dp"


        android:typeface="normal"

        />

    <TextView
        android:id="@+id/textNewAccount"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Crearse una nueva cuenta"
        android:textColor="@color/gray"
        android:layout_marginBottom="50dp"

        />
    <EditText
        android:id="@+id/reg_nombre"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="textPersonName"
        android:hint="nombre"
        android:layout_weight="7"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:drawableLeft="@drawable/name"
        android:layout_marginBottom="15dp"
        android:textSize="20dp"

        android:drawablePadding="10dp"
        android:background="@drawable/edt_style"
        />
    <EditText
        android:id="@+id/reg_DNI"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="number"
        android:hint="DNI"
        android:layout_weight="7"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_person"
        android:layout_marginBottom="15dp"
        android:textSize="20dp"
        android:drawablePadding="10dp"
        android:background="@drawable/edt_style"
        />

    <EditText
        android:id="@+id/reg_correo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="7"
        android:background="@drawable/edt_style"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:drawablePadding="10dp"

        android:hint="Correo Electronico"
        android:inputType="textPersonName"

        android:padding="10dp"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/reg_phone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="phone"
        android:maxLength="9"
        android:hint="Telefono"
        android:layout_weight="7"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        android:padding="1dp"
        android:drawableLeft="@drawable/phone"
        android:layout_marginBottom="15dp"
        android:textSize="20dp"

        android:drawablePadding="10dp"
        android:background="@drawable/edt_style"
        />

    <EditText
        android:id="@+id/reg_password"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textSize="20dp"

        android:hint="Contraseña"
        android:layout_weight="7"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/candado"

        android:drawablePadding="10dp"
        android:padding="10dp"
        android:background="@drawable/edt_style"
        android:layout_marginBottom="15dp"
        />
    <EditText
        android:id="@+id/conf_password"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textSize="20dp"

        android:hint="Confirmar Contraseña"
        android:layout_weight="7"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/candado"

        android:drawablePadding="10dp"
        android:padding="10dp"
        android:background="@drawable/edt_style"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:id="@+id/btn_registro"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="6"
        android:background="@drawable/btn_style"
        android:fontFamily="@font/nunito_bold"
        android:onClick="agregar_reg"
        android:text="Crear cuenta"
        android:textColor="@color/blanco" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_weight="5"
        android:gravity="center|top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textAlredy"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="¿Ya tienes una cuenta?"

            />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="6dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Ingresar"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>
</LinearLayout>